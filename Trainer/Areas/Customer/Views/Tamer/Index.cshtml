@model List<Tamer>


<div class="container-fluid" style="max-width: 70%;" >
	<div class="row">
		<div class="col-md-6">
			<h3>
				Tamer
			</h3>
		</div>
		<div class="col-md-6">
		</div>
	</div>
	<div class="row">
		<div class="col-md-6">
		</div>
		<div class="col-md-6 text-end">

			
				<a asp-controller="Tamer" asp-action="Create" class="btn btn-success btn-lg btn-block mb-2">Create new Tamer</a>

		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<table class="table table-sm">
				<thead>
					<tr>
						<th>
							ID
						</th>
						<th>
							Name
						</th>
						<th>
							Country 
						</th>
						<th>
							Edits
						</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var obj in Model.OrderBy(u => u.Id))
					{
						<tr>
							<td>@obj.Id</td>
							<td>@obj.Name</td>
							<td>@obj.Country</td>
							<td>
								<div class="w-75  gap-2" role="group">
									<a asp-controller="Tamer" asp-action="Edit" asp-route-id="@obj.Id"  class="btn btn-primary btn-md ">Edit</a>
									<a asp-controller="Tamer" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger btn-md ">Delete Tamer</a>
								</div>
								
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>